<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <div class="page-title-breadcrumb">
                <div class="pull-left">
                    <div class="page-title">
                        <%= __('Generate SMS') %>
                    </div>
                </div>
                <ol class="breadcrumb page-breadcrumb pull-right">
                    <li>
                        <i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="/admin/dashboard">
                            <%= __('Home') %>
                        </a>&nbsp;<i class="fa fa-angle-right"></i>
                    </li>
                    <li>
                        <a class="parent-item" href="#">
                            <%= __('SMS Management') %>
                        </a>&nbsp;<i class="fa fa-angle-right"></i>
                    </li>
                    <li>
                        <%= __('Generate SMS') %>
                    </li>
                </ol>
            </div>
        </div>

        <div class="row">
            <div class="col-xl-4 col-md-3 col-12">
                <div class="info-box bg-orange">
                    <span class="info-box-icon push-bottom">
                        <i class="material-icons">sms</i>
                    </span>
                    <div class="info-box-content">
                        <span class="info-box-text fw-bold mt-1">
                            <%= __('Total SMS Generated') %>
                        </span>
                        <a href="#" class="text-decoration-none text-white">
                            <span class="progress-description mt-2 mb-2">
                                <%= smsContents.length %>
                                    <%= __('Total SMS') %>
                            </span>
                        </a>
                        <span class="progress-description fs-4 mb-3"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="tabbable-line">
                    <div class="tab-content">
                        <div class="tab-pane active fontawesome-demo" id="tab1">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="d-flex bd-highlight mb-3">
                                                <div class="p-2 bd-highlight">
                                                    <form action="/admin/smsManagement/generate/chatgpt" method="get">
                                                        <button type="submit" class="btn btn-round btn-primary">
                                                            <%= __('Generate Personalized SMS Again') %>
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                            
                                            <table
                                                class="table table-striped table-responsive table-bordered table-hover custom-table table-sm">
                                                <thead>
                                                    <tr>
                                                        <th class="text-center">
                                                            <%= __('S. No.') %>
                                                        </th>
                                                        <th class="text-center">
                                                            <%= __('Customer Name') %>
                                                        </th>
                                                        <th class="text-center">
                                                            <%= __('Contact Number') %>
                                                        </th>
                                                        <th class="text-center">
                                                            <%= __('SMS Content') %>
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% if (smsContents && smsContents.length> 0) { %>
                                                        <% smsContents.forEach((sms, index)=> { %>
                                                            <tr>
                                                                <td class="text-center">
                                                                    <%= index + 1 %>
                                                                </td>
                                                                <td class="text-center">
                                                                    <%= sms.customer_name %>
                                                                </td>
                                                                <td class="text-center">
                                                                    <%= sms.customer_contact_number %>
                                                                </td>
                                                                <td class="text-center">
                                                                    <%= sms.personalize_message %>
                                                                </td>
                                                            </tr>
                                                            <% }) %>
                                                                <% } else { %>
                                                                    <tr>
                                                                        <td colspan="4" class="text-center">
                                                                            <%= __('No SMS generated yet.') %>
                                                                        </td>
                                                                    </tr>
                                                                    <% } %>
                                                </tbody>
                                            </table>

                                            <nav aria-label="Page navigation example">
                                                <ul class="pagination">
                                                    <% for (let i=1; i <=totalPages; i++) { %>
                                                        <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                                            <a class="page-link"
                                                                href="?page=<%= i - 1 %>&limit=<%= limit %>">
                                                                <%= i %>
                                                            </a>
                                                        </li>
                                                        <% } %>
                                                </ul>
                                            </nav>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="tab2"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>