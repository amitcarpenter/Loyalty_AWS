<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const labels = <%- JSON.stringify(items.map(item => item.name || 'Unknown')) %>;
        const receivedPoints = <%- JSON.stringify(items.map(item => item.received_loyalty_points)) %>;
        // const redeemedPoints = <%- JSON.stringify(items.map(item => item.transaction_amount)) %>;

        const ctx = document.getElementById('loyaltyPointsChart').getContext('2d');
        const myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Received Loyalty Points',
                    data: receivedPoints,
                    backgroundColor: 'rgba(54, 162, 235, 0.5)',
                    borderColor: 'rgba(54, 162, 235, 0.8)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    });
</script>