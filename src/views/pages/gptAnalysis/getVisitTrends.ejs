<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const labels = <%- JSON.stringify(items.map(item => item.name || 'Unknown')) %>;
        const daysOfWeek = <%- JSON.stringify(items.map(item => item.days_of_week)) %>;
        const hoursOfDay = <%- JSON.stringify(items.map(item => item.hours_of_day)) %>;

        const ctx = document.getElementById('visitTrendsChart').getContext('2d');
        const myChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Days of Week',
                    data: daysOfWeek,
                    backgroundColor: 'rgba(54, 162, 235, 0.5)',
                    borderColor: 'rgba(54, 162, 235, 0.8)',
                    borderWidth: 1
                }, {
                    label: 'Hours of Day',
                    data: hoursOfDay,
                    backgroundColor: 'rgba(255, 99, 132, 0.5)',
                    borderColor: 'rgba(255, 99, 132, 0.8)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    });
</script>

