  <script>
    let id;
    const deleteButtons = document.querySelectorAll('.deleteRequest');
    deleteButtons.forEach((button) => {
      button.addEventListener('click', (e) => {
        const DataId = e.target.closest('[data-id]').getAttribute('data-id');
        id = DataId;
        console.log(DataId)
        event.preventDefault();
        confirmDelete(e.target.href);
        console.log("id")
      })
    })
    function confirmDelete(deleteUrl) {
      Swal.fire({
        title: '<%- __("Are you sure") -%>',
        text: '<%- __("You want to delete it") -%>',
        icon: '<%- __("warning") -%>',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: '<%- __("Yes, delete it") -%>'
      }).then((result) => {
        if (result.isConfirmed) {
          window.location.href = `/admin/promotion/delete/${id}`;
        }
      });
    }
    function openSmsList(id) {
        // Construct the URL with the query parameter
        const url = `/admin/promotion/viewSmsList/${id}?filter=ALL`;

        // Redirect to the constructed URL or perform any other action
        window.location.href = url;
    }
  </script>
