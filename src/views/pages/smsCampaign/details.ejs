
<div class="page-content-wrapper">
  <div class="page-content">
    <div class="page-bar">
      <div class="page-title-breadcrumb">
        <div class="pull-left">
          <div class="page-title">
            <%= __('Campaign Details') %>
          </div>
        </div>
        <ol class="breadcrumb page-breadcrumb pull-right">
          <li>
            <i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="/admin/dashboard">
              <%= __('Home') %>
            </a>&nbsp;<i class="fa fa-angle-right"></i>
          </li>
          <li>
            <a class="parent-item" href="#">
              <%= __('Campaign Details') %>
            </a>&nbsp;<i class="fa fa-angle-right"></i>
          </li>
        </ol>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-head" style="background-color: <%= adminThemeColor %>;">
            <header>
              <%= adminBusinessName %>
            </header>
          </div>
          <div class="card-body">
            <div class="d-flex justify-content-between">
              <h4 class="card-title">
                <%= campaign.name || '___' %>
              </h4>
              <a href="/admin/campaign-overview" class="btn btn-round btn-primary">
                <%= __('Back to Campaigns') %>
              </a>
            </div>
            <div class="row">
              <div class="col-md-6">
                <h5>
                  <%= __('Campaign Information') %>
                </h5>
                <p><strong>
                    <%= __('Name') %>:
                  </strong>
                  <%= campaign.name || '___' %>
                </p>
                <p><strong>
                    <%= __('Target Audience') %>:
                  </strong>
                  <%= campaign.target_audience || '___' %>
                </p>
                <p><strong>
                    <%= __('Message Content') %>:
                  </strong>
                  <%= campaign.message_content || '___' %>
                </p>
                <p><strong>
                    <%= __('Start Date') %>:
                  </strong>
                  <%= campaign.start_date ? new Date(campaign.start_date).toLocaleDateString() : '___' %>
                </p>
                <p><strong>
                    <%= __('End Date') %>:
                  </strong>
                  <%= campaign.end_date ? new Date(campaign.end_date).toLocaleDateString() : '___' %>
                </p>
                <p><strong>
                    <%= __('Status') %>:
                  </strong>
                  <%= campaign.status || '___' %>
                </p>
              </div>
              <div class="col-md-6">
                <h5>
                  <%= __('Campaign Statistics') %>
                </h5>
                <% if (campaign.Campaign_Stats) { %>
                  <p><strong>
                      <%= __('Total Sent') %>:
                    </strong>
                    <%= campaign.Campaign_Stats.total_sent || '___' %>
                  </p>
                  <p><strong>
                      <%= __('Total Delivered') %>:
                    </strong>
                    <%= campaign.Campaign_Stats.total_delivered || '___' %>
                  </p>
                  <p><strong>
                      <%= __('Total Failed') %>:
                    </strong>
                    <%= campaign.Campaign_Stats.total_failed || '___' %>
                  </p>
                  <% } else { %>
                    <p>
                      <%= __('No statistics available') %>
                    </p>
                    <% } %>
              </div>
            </div>
            <div class="mt-3">
              <a href="/admin/smsCampaign/edit/<%= campaign.id %>" class="btn btn-round btn-warning">
                <%= __('Edit Campaign') %>
              </a>
              <a href="/admin/smsCampaign/delete/<%= campaign.id %>" class="btn btn-round btn-danger">
                <%= __('Delete Campaign') %>
              </a>
            </div>

            <div class="mt-5">
              <h5>
                <%= __('SMS Campaign Sends') %>
              </h5>
              <table class="table table-striped table-bordered">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>
                      <%= __('Name') %>
                    </th>
                    <th>
                      <%= __('Content Number') %>
                    </th>
                    <th>
                      <%= __('Message') %>
                    </th>
                    <th>
                      <%= __('Status') %>
                    </th>
                    <th>
                      <%= __('Send Date') %>
                    </th>
                  </tr>
                </thead>
                <tbody>
                  <% if (smsCampaignSends.length> 0) { %>
                    <% smsCampaignSends.forEach((send, index)=> { %>
                      <tr>
                        <td>
                          <%= index + 1 %>
                        </td>
                        <td>
                          <%= send.Customer.name%>
                        </td>
                        <td>
                          <%= send.Customer.contact_number %>
                        </td>
                        <td>
                          <%= send.sended_message %>
                        </td>
                        <td>
                          <%= send.message_status %>
                        </td>
                        <td>
                          <%= send.send_date ? new Date(send.send_date).toLocaleDateString() : '___' %>
                        </td>
                      </tr>
                      <% }) %>
                        <% } else { %>
                          <tr>
                            <td colspan="6" class="text-center">
                              <%= __('No SMS sends found') %>
                            </td>
                          </tr>
                          <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>