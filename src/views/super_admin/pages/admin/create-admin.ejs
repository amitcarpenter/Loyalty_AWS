<style>
    .color-item {
        width: 28px;
        height: 28px;
        border: 1px solid #ddd;
        margin: 5px;
        border-radius: 152px;
        position: relative;
        cursor: pointer;
    }

    .color-item.selected::after {
        content: "";
        position: absolute;
        top: 5px;
        left: 5px;
        bottom: 5px;
        right: 5px;
        border: 4px solid #4CAF50;
        /* Adjust border color as needed */
        border-radius: 50%;
    }
    .selected::after {
        content: '\2713';
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white;
    }
</style>

